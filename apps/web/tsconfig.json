{
  "extends": "@mono/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "paths": {
      "@components": ["./src/components/index.ts"],
      "@hooks": ["./src/hooks/index.ts"],
      "@utils": ["src/utils/index"],
      "@lib/*": ["src/lib/*"],
    },
    "plugins": [
      {
        "name": "next",
        "strict": true,
        "jsx": "react-jsx"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
